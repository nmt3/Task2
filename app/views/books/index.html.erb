<h1>Books</h1>
<% @books.each do |book| %>

<p>title</p>
<span><%= book.title %></span>
<span><%= book.body %></span>


<h2>New book</h2>
<%= form_with model: book.new do |f| %>
<h4>title</h4>
<%= f.text_field :Title %>

<h4>body</h4>
<%= f.text_area :Body %>

<%= f.submit 'Create Book' %>
<% end %>
<% end %>